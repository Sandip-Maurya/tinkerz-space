// Placeholder testimonials - can be replaced with real ones later
const testimonials = [
  {
    name: 'Prakhar Maheshwari',
    role: 'Grade 10 Student',
    text: 'Tinkerz Space has transformed how I learn. Building real projects is so much more engaging than just reading textbooks!',
    rating: 5
  },
  {
    name: 'Sandip Maurya',
    role: 'Parent',
    text: 'My child has developed incredible problem-solving skills and confidence. This is exactly what modern education should be.',
    rating: 5
  },
  {
    name: 'Aarav Singh',
    role: 'Undergraduate',
    text: 'The hands-on approach and mentorship here helped me build a project that won a national competition. Highly recommended!',
    rating: 5
  },
];
---

<section class="section-padding bg-dark-blue-light relative overflow-hidden">
  <div class="container-max">
    <div class="text-center mb-12 fade-in">
      <h2 class="text-4xl md:text-5xl font-black mb-4 text-white">
        TESTIMONIALS
      </h2>
      <p class="text-cyan text-lg md:text-xl max-w-2xl mx-auto">
        Hear from our community of innovators
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 md:gap-8">
      {testimonials.map((testimonial, index) => (
        <div class="fade-in" style={`transition-delay: ${index * 100}ms`}>
          <div class="bg-dark-blue border border-cyan/30 rounded-lg p-6 md:p-8 h-full flex flex-col">
            <div class="flex mb-4">
              {Array.from({ length: testimonial.rating }).map(() => (
                <svg class="w-5 h-5 text-cyan" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>
            <p class="text-white/90 mb-6 flex-grow italic leading-relaxed">
              "{testimonial.text}"
            </p>
            <div>
              <p class="text-white font-semibold">{testimonial.name}</p>
              <p class="text-cyan text-sm">{testimonial.role}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const fadeElements = document.querySelectorAll('.fade-in');
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
        }
      });
    }, { threshold: 0.2 });

    fadeElements.forEach(el => observer.observe(el));
  });
</script>

