<section id="contact" class="section-padding bg-dark-blue relative overflow-hidden">
  <div class="container-max">
    <div class="text-center mb-12 fade-in">
      <h2 class="text-4xl md:text-5xl font-black mb-4 text-white">
        CONTACT US
      </h2>
      <p class="text-cyan text-lg md:text-xl max-w-2xl mx-auto">
        Have questions? Get in touch with us!
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- Contact Form -->
      <div class="fade-in">
        <form class="space-y-6" method="POST" action="#" id="contact-form">
          <div>
            <label for="name" class="block text-white/90 mb-2 font-medium">Name</label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-4 py-3 bg-dark-blue-light border border-cyan/30 rounded-lg text-white focus:outline-none focus:border-cyan transition-colors"
              placeholder="Your name"
            />
          </div>
          
          <div>
            <label for="email" class="block text-white/90 mb-2 font-medium">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 bg-dark-blue-light border border-cyan/30 rounded-lg text-white focus:outline-none focus:border-cyan transition-colors"
              placeholder="your.email@example.com"
            />
          </div>
          
          <div>
            <label for="phone" class="block text-white/90 mb-2 font-medium">Phone</label>
            <input
              type="tel"
              id="phone"
              name="phone"
              class="w-full px-4 py-3 bg-dark-blue-light border border-cyan/30 rounded-lg text-white focus:outline-none focus:border-cyan transition-colors"
              placeholder="+91-XXXXXXXXXX"
            />
          </div>
          
          <div>
            <label for="message" class="block text-white/90 mb-2 font-medium">Message</label>
            <textarea
              id="message"
              name="message"
              required
              rows="5"
              class="w-full px-4 py-3 bg-dark-blue-light border border-cyan/30 rounded-lg text-white focus:outline-none focus:border-cyan transition-colors resize-none"
              placeholder="Your message..."
            ></textarea>
          </div>
          
          <button
            type="submit"
            class="w-full px-8 py-4 bg-cyan text-dark-blue font-bold rounded-lg hover:bg-cyan-light transition-all transform hover:scale-105 shadow-lg shadow-cyan/30"
          >
            Send Message
          </button>
        </form>
      </div>

      <!-- Contact Information -->
      <div class="fade-in">
        <div class="bg-dark-blue-light border border-cyan/30 rounded-lg p-8 space-y-8">
          <div>
            <h3 class="text-2xl font-bold text-white mb-6">Get in Touch</h3>
            <p class="text-white/80 mb-8 leading-relaxed">
              If you have any questions feel free to reach out. We're here to help you start your innovation journey!
            </p>
          </div>

          <div class="space-y-6">
            <div class="flex items-start space-x-4">
              <div class="w-12 h-12 bg-cyan/20 border-2 border-cyan/50 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-cyan" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <h4 class="text-white font-semibold mb-1">Phone</h4>
                <a href="tel:+919958116995" class="text-cyan hover:text-cyan-light transition-colors">
                  +91-9958116995
                </a>
              </div>
            </div>

            <div class="flex items-start space-x-4">
              <div class="w-12 h-12 bg-cyan/20 border-2 border-cyan/50 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-cyan" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <h4 class="text-white font-semibold mb-1">Email</h4>
                <a href="mailto:sunit@tinkerzspace.com" class="text-cyan hover:text-cyan-light transition-colors">
                  sunit@tinkerzspace.com
                </a>
              </div>
            </div>

            <div class="flex items-start space-x-4">
              <div class="w-12 h-12 bg-cyan/20 border-2 border-cyan/50 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-cyan" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div>
                <h4 class="text-white font-semibold mb-1">Address</h4>
                <p class="text-white/80">
                  B-9, Sector - 92, Noida
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const fadeElements = document.querySelectorAll('#contact .fade-in');
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
        }
      });
    }, { threshold: 0.2 });

    fadeElements.forEach(el => observer.observe(el));

    // Form handling (basic - can be enhanced with backend integration)
    const form = document.getElementById('contact-form');
    if (form) {
      form.addEventListener('submit', (e) => {
        e.preventDefault();
        // For now, just show an alert. In production, this would send to a backend.
        alert('Thank you for your message! We will get back to you soon.');
        form.reset();
      });
    }
  });
</script>

