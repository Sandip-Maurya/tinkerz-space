---
const facilities = [
  'Robotics Bay with Cobots, TurtleBots, Toolkits, Sensors, and Build Stations',
  'Drone Assembly & Flight Zone',
  'CAD/3D Printing Workstation',
  'Code Hub & AI Learning Center',
  'Modular Classrooms and Demo Zones',
  'Project Showcase Gallery and Pitch Zone',
  'Creative Caf√© & Brainstorming Lounge',
];
---

<section id="facilities" class="section-padding bg-dark-blue relative overflow-hidden">
  <div class="container-max">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Image Placeholder -->
      <div class="fade-in">
        <div class="relative rounded-lg overflow-hidden border-2 border-cyan/30">
          <div class="aspect-[4/3] bg-gradient-to-br from-cyan/20 to-dark-blue-light flex items-center justify-center">
            <div class="text-center p-8">
              <svg class="w-24 h-24 mx-auto mb-4 text-cyan/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
              </svg>
              <p class="text-white/50 text-sm">State-of-the-art facilities</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Facilities List -->
      <div class="fade-in">
        <h2 class="text-4xl md:text-5xl font-black mb-8 text-white">
          FACILITIES INCLUDED
        </h2>
        
        <ul class="space-y-4">
          {facilities.map((facility, index) => (
            <li class="flex items-start group">
              <div class="flex-shrink-0 w-12 h-12 bg-cyan/20 border-2 border-cyan/50 rounded-lg flex items-center justify-center mr-4 group-hover:bg-cyan/30 transition-colors">
                <span class="text-cyan font-bold text-lg">{String(index + 1).padStart(2, '0')}</span>
              </div>
              <p class="text-white/90 text-lg flex-1 pt-2">
                {facility}
              </p>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const fadeElements = document.querySelectorAll('#facilities .fade-in');
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
        }
      });
    }, { threshold: 0.2 });

    fadeElements.forEach(el => observer.observe(el));
  });
</script>

