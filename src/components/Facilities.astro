---
import { assets } from '../config/assets.ts';
import ImageContainer from './ImageContainer.astro';

const facilities: string[] = [
  'Robotics Bay with Cobots, TurtleBots, Toolkits, Sensors, and Build Stations',
  'Drone Assembly & Flight Zone',
  'CAD/3D Printing Workstation',
  'Code Hub & AI Learning Center',
  'Modular Classrooms and Demo Zones',
  'Project Showcase Gallery and Pitch Zone',
  'Creative Caf√© & Brainstorming Lounge',
];
---

<section id="facilities" class="section-padding bg-dark-blue relative overflow-hidden">
  <div class="container-max">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Image -->
      <div class="fade-in">
        <ImageContainer
          srcMobile={assets.content.facilities.mobile.src}
          srcTablet={assets.content.facilities.tablet.src}
          srcLaptop={assets.content.facilities.laptop.src}
          alt={assets.content.facilities.alt}
          placeholderText="State-of-the-art facilities"
          placeholderIcon="building"
          aspectRatioMobile={assets.content.facilities.mobile.aspectRatio}
          aspectRatioTablet={assets.content.facilities.tablet.aspectRatio}
          aspectRatioLaptop={assets.content.facilities.laptop.aspectRatio}
        />
      </div>

      <!-- Facilities List -->
      <div class="fade-in">
        <h2 class="text-4xl md:text-5xl font-black mb-8 text-white">
          FACILITIES INCLUDED
        </h2>
        
        <ul class="space-y-4">
          {facilities.map((facility: string, index: number) => (
            <li class="flex items-start group">
              <div class="flex-shrink-0 w-12 h-12 bg-cyan/20 border-2 border-cyan/50 rounded-lg flex items-center justify-center mr-4 group-hover:bg-cyan/30 transition-colors">
                <span class="text-cyan font-bold text-lg">{String(index + 1).padStart(2, '0')}</span>
              </div>
              <p class="text-white/90 text-lg flex-1 pt-2">
                {facility}
              </p>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const fadeElements = document.querySelectorAll('#facilities .fade-in');
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
        }
      });
    }, { threshold: 0.2 });

    fadeElements.forEach(el => observer.observe(el));
  });
</script>

