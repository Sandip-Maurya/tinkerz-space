---
import { assets } from '../config/assets.ts';
import ImageContainer from './ImageContainer.astro';
---

<section id="about" class="section-padding bg-dark-blue-light relative overflow-hidden">
  <div class="container-max">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Text Content -->
      <div class="fade-in">
        <h2 class="text-4xl md:text-5xl font-black mb-6 text-white">
          VISION
        </h2>
        
        <div class="space-y-6 text-white/90 text-lg leading-relaxed">
          <p>
            To build a vibrant, dynamic space where young minds, students from Grade 1 to 12 (ages 6-18), 
            Undergraduates, Innovators & Hobbyists explore, invent, and innovate through real-world 
            applications of Robotics, AI, Drone Tech, and Space Tech, guided by strong mentorship, 
            project-based learning.
          </p>
          
          <p>
            To nurture a thriving community of tinkerers, builders, and problem solvers who grow into 
            confident creators and future tech entrepreneurs.
          </p>
          
          <p class="text-cyan text-xl font-semibold italic">
            Tinkerz Space is where the next generation of Elon Musks, Steve Jobs, Jensen Huangs and 
            Bill Gates will begin their journey.
          </p>
        </div>
      </div>

      <!-- Image -->
      <div class="fade-in">
        <ImageContainer
          srcMobile={assets.content.vision.mobile.src}
          srcTablet={assets.content.vision.tablet.src}
          srcLaptop={assets.content.vision.laptop.src}
          alt={assets.content.vision.alt}
          placeholderText="Student working on electronics"
          placeholderIcon="lightbulb"
          aspectRatioMobile={assets.content.vision.mobile.aspectRatio}
          aspectRatioTablet={assets.content.vision.tablet.aspectRatio}
          aspectRatioLaptop={assets.content.vision.laptop.aspectRatio}
        />
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const fadeElements = document.querySelectorAll('#about .fade-in');
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
        }
      });
    }, { threshold: 0.2 });

    fadeElements.forEach(el => observer.observe(el));
  });
</script>

